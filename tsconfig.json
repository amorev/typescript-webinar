{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "es6",
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
