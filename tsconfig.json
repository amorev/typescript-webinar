{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "es6",
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "./ts",
    "outDir": "./src",
    "noUnusedLocals": true
  },
  "include": [
    "./ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
